<div class="row">
    <button type="button" id="ask_info_tag" class="btn btn-light active">{{tag}}</button>
</div>

<div style="display: none">
    <span id="ask_info_content_id">{{contentid}}</span>
</div>

<table class="table">
    <tbody>
    <tr>
        <td width="96px">
            <img src="{{author_figure}}" width="48px" height="48px">
            <div class="text-center">
                <span>{{authorname}}</span>
            </div>
        </td>
        <td width="100%" valign="top">
            <div class="row">
                <span class="ml-auto"><small>{{createtime}}</small></span>
            </div>
            <div class="row">
                <span>{{title}}</span>
            </div>
            <div>
                <span>{{content}}</span>
            </div>
        </td>
    </tr>
    </tbody>
</table>

<div id="ask_info_reply_area">
问答回复区
</div>

<td width="100%" valign="top">
    <textarea class=form-control id="ask_info_txt_reply" rows="5" placeholder="输入内容"></textarea>
    <button id="ask_info_btn_reply" class="btn btn-primary">回复</button>
</td>